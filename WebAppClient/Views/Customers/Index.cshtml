@model IEnumerable<WebAppClient.Models.Customers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />

<h1>Customers</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.CustName)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.CustomerType)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerType.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
