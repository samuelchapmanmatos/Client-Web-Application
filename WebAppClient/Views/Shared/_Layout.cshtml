<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  Client Web Application</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" /> 
</head>
<body>
    <header style="position: fixed; width: 100%; margin-bottom: 160px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #1B2A9B; color: white; font-weight: bold; font-weight: bolder;">
            <div class="container" id="idContainerNav">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Customers" asp-action="Index"> Client Web Application</a>
                <button class="navbar-toggler text-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="color: white;">
                    <span class="navbar-toggler-icon" style="color: white;"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="CustomerTypes" asp-action="Index">Customer Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Invoices" asp-action="Invoice">Invoice</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="InvoiceDetails" asp-action="Index">Invoice Details</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 accordion" style="background-color: #fff; height: 100%;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #1B2A9B;">
        <div class="container" style="color: white; font-weight: bold;">
            &copy; 2023 - Samuel Chapman Matos - WebAppClient
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/InvoiceDetail.js" asp-append-version="true"></script>
    <script src="~/js/Invoice.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
