@model WebAppClient.Models.Invoice

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />

<h1>Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.CustName" class="control-label"></label>
                @Html.DropDownListFor(x => Model.CustomerId,
               new SelectList(ViewData["CustomerId"] as SelectList, "Value", "Text"), "Seleccione un Customer",
               htmlAttributes: new { @class = "form-control", id = "CustomerId", name = "CustomerId" })
                <span asp-validation-for="CustomerId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" id="TotalI" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalItbis" class="control-label"></label>
                <input asp-for="TotalItbis" id="TotalItbisI" readonly="readonly" class="form-control" />
                <span asp-validation-for="TotalItbis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubTotal" class="control-label"></label>
                <input asp-for="SubTotal" id="SubTotalI" readonly="readonly" class="form-control" />
                <span asp-validation-for="SubTotal" class="text-danger"></span>
            </div>
            <span id="mensaje" class=" text-danger"></span>
            <br />
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />|
                <a asp-action="Invoice" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
